<div class="events-navigation">
  <div class="nav-container">
    <div class="nav-spacer"></div>
    
    <!-- Center Navigation -->
    <div class="nav-center">
      <% if current_page?(events_path) %>
        <!-- On Events Index - Show Dashboard Link for Admins -->
        <% if (defined?(current_admin_user) && current_admin_user) || (defined?(current_authenticated_user) && current_authenticated_user&.admin?) %>
          <%= link_to admin_root_path, class: "nav-link" do %>
            Dashboard
          <% end %>
        <% end %>
        
        <%= link_to new_event_path, class: "nav-link" do %>
          Create Event
        <% end %>
      <% else %>
        <!-- On Other Pages - Show Events and Create Links -->
        <% if (defined?(current_admin_user) && current_admin_user) || (defined?(current_authenticated_user) && current_authenticated_user&.admin?) %>
          <%= link_to admin_events_path, class: "nav-link" do %>
            Events
          <% end %>
        <% else %>
          <%= link_to events_path, class: "nav-link" do %>
            Events
          <% end %>
        <% end %>
        
        <% unless current_page?(new_event_path) %>
          <%= link_to new_event_path, class: "nav-link" do %>
            Create Event
          <% end %>
        <% end %>
      <% end %>
    </div>
    
    <!-- Right Side - User Info & Logout -->
    <div class="nav-actions">
      <div class="user-info">
        <div class="user-avatar">
          <span class="avatar-text"><%= current_authenticated_user.admin? ? 'âš¡' : 'ðŸ‘¤' %></span>
        </div>
        <div class="user-details">
          <div class="user-name"><%= current_authenticated_user.email.split('@').first.capitalize %></div>
          <div class="user-role"><%= current_authenticated_user.admin? ? 'Admin' : 'User' %></div>
        </div>
      </div>
      
      <%= link_to (current_admin_user ? destroy_admin_user_session_path : destroy_user_session_path), 
                  data: { 
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to log out?" 
                  },
                  class: "btn btn-danger btn-sm",
                  title: "Sign Out" do %>
        Logout
      <% end %>
    </div>
  </div>
  
  <!-- Page Title Section -->
  <% unless current_page?(events_path) %>
    <% unless (current_page?(edit_event_path(@event)) if defined?(@event)) || (current_page?(event_path(@event)) if defined?(@event)) %>
      <div class="page-title-section">
        <h1 class="page-title">
          <% if current_page?(new_event_path) %>
            Create New Event
          <% elsif defined?(@registration) && @registration.persisted? %>
            Edit Registration
          <% else %>
            Events
          <% end %>
        </h1>
      </div>
    <% end %>
  <% end %>
</div>

<style>
  :root {
    --text-primary: #ffffff;
    --text-secondary: #b0b0b0;
    --text-muted: #888888;
    --primary: #007bff;
    --success: #28a745;
    --danger: #dc3545;
    --warning: #ffc107;
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --shadow: rgba(0, 0, 0, 0.2);
    --gradient-primary: linear-gradient(135deg, var(--primary) 0%, #0099ff 100%);
    --gradient-success: linear-gradient(135deg, var(--success) 0%, #20c997 100%);
    --gradient-danger: linear-gradient(135deg, var(--danger) 0%, #e83e8c 100%);
  }

  /* Enhanced Navigation Header */
  .events-navigation {
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(26, 26, 26, 0.9) 100%);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .events-navigation::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 193, 7, 0.5), transparent);
  }
  
  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .nav-spacer {
    flex: 1;
  }
  
  .nav-center {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .nav-actions {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 20px;
  }
  
  /* Enhanced Navigation Links */
  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }
  
  .nav-link:hover::before {
    left: 100%;
  }
  
  .nav-link:hover {
    color: var(--text-primary);
    background: linear-gradient(135deg, rgba(0, 123, 255, 0.1) 0%, rgba(0, 123, 255, 0.05) 100%);
    border-color: rgba(0, 123, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
  }
  
  /* Enhanced Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: white;
  }
  
  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }
  
  .btn:hover::before {
    left: 100%;
  }
  
  .btn-danger {
    background: var(--gradient-danger);
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
  }
  
  .btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
  }
  
  .btn-sm {
    padding: 8px 16px;
    font-size: 12px;
    border-radius: 6px;
  }
  
  /* User Info Styling */
  .user-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .user-avatar {
    width: 35px;
    height: 35px;
    background: linear-gradient(135deg, var(--warning) 0%, #e0a800 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    color: #000;
    font-weight: 600;
    flex-shrink: 0;
  }
  
  .user-details {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .user-name {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.2;
  }
  
  .user-role {
    font-size: 11px;
    color: var(--text-muted);
    line-height: 1.2;
  }
  
  /* Page Title Section */
  .page-title-section {
    text-align: center;
    padding: 20px 0;
    background: var(--glass-bg);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--glass-border);
  }
  
  .page-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
    background: linear-gradient(135deg, #fff 0%, #ffc107 50%, #fff 100%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 4s ease-in-out infinite;
  }
  
  @keyframes shimmer {
    0% { background-position: -200% 0; }
    50% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .nav-container {
      padding: 15px 20px;
      flex-direction: column;
      gap: 15px;
    }
    
    .nav-spacer {
      display: none;
    }
    
    .nav-center {
      order: 1;
    }
    
    .nav-actions {
      order: 2;
      justify-content: center;
      gap: 15px;
    }
    
    .user-details {
      display: none;
    }
    
    .page-title {
      font-size: 24px;
    }
  }
  
  @media (max-width: 480px) {
    .nav-container {
      padding: 12px 15px;
    }
    
    .nav-link,
    .btn {
      padding: 8px 12px;
      font-size: 12px;
    }
    
    .nav-center {
      gap: 8px;
    }
    
    .user-avatar {
      width: 30px;
      height: 30px;
      font-size: 14px;
    }
    
    .page-title {
      font-size: 20px;
    }
  }
</style>
