<div class="admin-dashboard">
  <!-- Navigation Header -->
  <nav class="admin-nav">
    <div class="nav-brand">
      <span class="brand-icon">âš¡</span>
      <span class="brand-text">Admin Portal</span>
    </div>
    <div class="nav-actions">
      <%= link_to "Logout", destroy_admin_user_session_path, 
                  data: { turbo_method: :delete }, 
                  class: "btn btn-danger btn-sm" %>
    </div>
  </nav>

  <div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section glass">
      <div class="welcome-content">
        <h1 class="dashboard-title">
          <span class="title-gradient">Dashboard</span>
        </h1>
        <p class="welcome-text">
          Welcome back, <strong><%= @current_admin.email %></strong>
        </p>
        <div class="status-badge">
          <span class="status-dot"></span>
          Administrator Access
        </div>
      </div>
      <div class="welcome-visual">
        <div class="stats-ring">
          <div class="ring-progress" data-progress="75"></div>
          <div class="ring-center">
            <span class="ring-number"><%= User.count %></span>
            <span class="ring-label">Users</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card glass" data-stat="users">
        <div class="stat-icon">ðŸ‘¥</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.count %></div>
          <div class="stat-label">Total Users</div>
        </div>
        <div class="stat-trend">+12%</div>
      </div>
      
      <div class="stat-card glass" data-stat="admins">
        <div class="stat-icon">âš¡</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.where(role: 1).count %></div>
          <div class="stat-label">Administrators</div>
        </div>
        <div class="stat-trend">+1</div>
      </div>
      
      <div class="stat-card glass" data-stat="regular">
        <div class="stat-icon">ðŸ‘¤</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.where(role: 0).count %></div>
          <div class="stat-label">Regular Users</div>
        </div>
        <div class="stat-trend">+8%</div>
      </div>
      
      <div class="stat-card glass" data-stat="events">
        <div class="stat-icon">ðŸ“…</div>
        <div class="stat-content">
          <div class="stat-number"><%= @total_events %></div>
          <div class="stat-label">Events</div>
        </div>
        <div class="stat-trend">+<%= @total_registrations %> reg</div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="actions-section">
      <h2 class="section-title">Quick Actions</h2>
      <div class="actions-grid">
        <div class="action-card glass">
          <div class="action-icon">ðŸ“Š</div>
          <h3>Event Management</h3>
          <p>Manage all events and registrations</p>
          <%= link_to "Manage Events", admin_events_path, class: "btn btn-primary" %>
        </div>
        
        <div class="action-card glass">
          <div class="action-icon">ðŸ‘¥</div>
          <h3>Registration Management</h3>
          <p>Manage event registrations and attendees</p>
          <%= link_to "Manage Registrations", admin_registrations_path, class: "btn btn-primary" %>
        </div>
        
        <div class="action-card glass">
          <div class="action-icon">ðŸ“ˆ</div>
          <h3>Analytics</h3>
          <p>View detailed statistics and reports</p>
          <button class="btn btn-primary" disabled>Coming Soon</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  :root {
    --text-primary: #ffffff;
    --text-secondary: #b0b0b0;
    --text-muted: #888888;
    --primary: #007bff;
    --primary-hover: #0056b3;
    --primary-light: #cce7ff;
    --success: #28a745;
    --success-hover: #1e7e34;
    --success-light: #d4edda;
    --danger: #dc3545;
    --danger-hover: #c82333;
    --danger-light: #f8d7da;
    --warning: #ffc107;
    --warning-hover: #e0a800;
    --warning-light: #fff3cd;
    --info: #17a2b8;
    --info-hover: #117a8b;
    --info-light: #d1ecf1;
    --dark: #343a40;
    --dark-hover: #23272b;
    --light: #f8f9fa;
    --border: rgba(255, 255, 255, 0.1);
    --shadow: rgba(0, 0, 0, 0.2);
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --gradient-primary: linear-gradient(135deg, var(--primary) 0%, #0099ff 100%);
    --gradient-success: linear-gradient(135deg, var(--success) 0%, #20c997 100%);
    --gradient-warning: linear-gradient(135deg, var(--warning) 0%, #fd7e14 100%);
    --gradient-danger: linear-gradient(135deg, var(--danger) 0%, #e83e8c 100%);
  }

  .admin-dashboard {
    height: 100vh;
    background: linear-gradient(135deg, #000000 0%, #030303 50%, #000000 100%);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  .admin-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
    height: 70px;
    box-sizing: border-box;
  }
  
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .brand-icon {
    font-size: 24px;
    filter: drop-shadow(0 0 10px rgba(255, 193, 7, 0.5));
  }
  
  .brand-text {
    font-size: 20px;
    font-weight: 600;
    background: linear-gradient(135deg, #fff 0%, #ccc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .nav-link:hover {
    color: var(--text-primary);
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-1px);
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--warning);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after {
    width: 80%;
  }
  
  /* Glass Effect Styling */
  .glass {
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    box-shadow: 
      0 8px 32px var(--shadow),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }
  
  .glass::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  }

  /* Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: white;
  }
  
  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }
  
  .btn:hover::before {
    left: 100%;
  }
  
  .btn-primary {
    background: var(--gradient-primary);
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.4);
  }
  
  .btn-success {
    background: var(--gradient-success);
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
  }
  
  .btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4);
  }
  
  .btn-danger {
    background: var(--gradient-danger);
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
  }
  
  .btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
  }
  
  .btn-secondary {
    background: rgba(108, 117, 125, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .btn-secondary:hover {
    background: rgba(108, 117, 125, 1);
    transform: translateY(-1px);
  }
  
  .btn-sm {
    padding: 8px 16px;
    font-size: 12px;
    border-radius: 6px;
  }
  
  .btn-lg {
    padding: 16px 32px;
    font-size: 16px;
    border-radius: 10px;
  }
  
  .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
  }
  
  .btn:disabled:hover {
    transform: none;
    box-shadow: none;
  }
  
  .dashboard-container {
    flex: 1;
    padding: 30px 40px;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-rows: auto auto 1fr;
    gap: 30px;
    height: calc(100vh - 70px);
    overflow-y: auto;
  }
  
  .welcome-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 35px 40px;
    overflow: hidden;
    position: relative;
  }
  
  .welcome-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
    animation: pulse 4s ease-in-out infinite;
  }
  
  .welcome-content {
    flex: 1;
  }
  
  .dashboard-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 12px;
  }
  
  .title-gradient {
    background: linear-gradient(135deg, #fff 0%, var(--warning) 30%, #fff 60%, var(--warning) 100%);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 4s ease-in-out infinite;
    position: relative;
  }
  
  .welcome-text {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }
  
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: linear-gradient(135deg, rgba(40, 167, 69, 0.2), rgba(40, 167, 69, 0.1));
    border: 1px solid rgba(40, 167, 69, 0.4);
    border-radius: 25px;
    font-size: 14px;
    color: var(--success-light);
    font-weight: 500;
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 10px rgba(40, 167, 69, 0.2);
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: blink 2s infinite;
  }
  
  .welcome-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .stats-ring {
    position: relative;
    width: 120px;
    height: 120px;
  }
  
  .ring-progress {
    width: 100%;
    height: 100%;
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-top: 3px solid var(--warning);
    border-radius: 50%;
    animation: spin 3s linear infinite;
  }
  
  .ring-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  
  .ring-number {
    display: block;
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
  }
  
  .ring-label {
    display: block;
    font-size: 12px;
    color: var(--text-secondary);
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }
  
  .stat-card {
    padding: 28px;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }
  
  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--warning), transparent);
    transition: left 0.5s ease;
  }
  
  .stat-card:hover::before {
    left: 100%;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
  }
  
  .stat-icon {
    font-size: 40px;
    filter: grayscale(0.3);
  }
  
  .stat-content {
    flex: 1;
  }
  
  .stat-number {
    font-size: 32px;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1;
  }
  
  .stat-label {
    font-size: 15px;
    color: var(--text-secondary);
    margin-top: 6px;
  }
  
  .stat-trend {
    font-size: 12px;
    color: var(--success);
    font-weight: 500;
  }
  
  .actions-section {
    display: flex;
    flex-direction: column;
  }
  
  .section-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--text-primary);
  }
  
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  
  .action-card {
    padding: 32px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .action-card:hover {
    transform: translateY(-5px);
  }
  
  .action-icon {
    font-size: 48px;
    margin-bottom: 16px;
    filter: grayscale(0.5);
  }
  
  .action-card h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-primary);
  }
  
  .action-card p {
    color: var(--text-secondary);
    margin-bottom: 20px;
    line-height: 1.5;
    font-size: 15px;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }
  
  @keyframes shimmer {
    0% { background-position: -200% 0; }
    50% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }
  
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @media (max-width: 1200px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .admin-nav {
      padding: 15px 20px;
    }
    
    .dashboard-container {
      padding: 20px;
      gap: 20px;
    }
    
    .welcome-section {
      flex-direction: column;
      text-align: center;
      gap: 20px;
      padding: 25px;
    }
    
    .dashboard-title {
      font-size: 32px;
    }
    
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }
    
    .stat-card {
      padding: 20px;
    }
    
    .actions-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
  
  @media (max-height: 800px) {
    .dashboard-container {
      gap: 25px;
    }
    
    .welcome-section {
      padding: 25px 35px;
    }
    
    .stat-card {
      padding: 24px;
    }
    
    .action-card {
      padding: 28px;
    }
  }
  
  @media (max-height: 700px) {
    .dashboard-container {
      gap: 20px;
    }
    
    .dashboard-title {
      font-size: 36px;
    }
    
    .welcome-section {
      padding: 20px 30px;
    }
    
    .stat-card {
      padding: 20px;
    }
    
    .action-card {
      padding: 24px;
    }
    
    .action-icon {
      font-size: 40px;
    }
  }
</style>
