<div class="admin-dashboard">
  <!-- Navigation Header -->
  <nav class="admin-nav">
    <div class="nav-brand">
      <span class="brand-icon">âš¡</span>
      <span class="brand-text">Admin Portal</span>
    </div>
    <div class="nav-actions">
      <%= link_to "Home", root_path, class: "nav-link" %>
      <%= link_to "Logout", destroy_admin_user_session_path, 
                  data: { turbo_method: :delete }, 
                  class: "btn btn-danger btn-sm" %>
    </div>
  </nav>

  <div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section glass">
      <div class="welcome-content">
        <h1 class="dashboard-title">
          <span class="title-gradient">Dashboard</span>
        </h1>
        <p class="welcome-text">
          Welcome back, <strong><%= @current_admin.email %></strong>
        </p>
        <div class="status-badge">
          <span class="status-dot"></span>
          Administrator Access
        </div>
      </div>
      <div class="welcome-visual">
        <div class="stats-ring">
          <div class="ring-progress" data-progress="75"></div>
          <div class="ring-center">
            <span class="ring-number"><%= User.count %></span>
            <span class="ring-label">Users</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <div class="stat-card glass" data-stat="users">
        <div class="stat-icon">ðŸ‘¥</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.count %></div>
          <div class="stat-label">Total Users</div>
        </div>
        <div class="stat-trend">+12%</div>
      </div>
      
      <div class="stat-card glass" data-stat="admins">
        <div class="stat-icon">âš¡</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.where(role: 1).count %></div>
          <div class="stat-label">Administrators</div>
        </div>
        <div class="stat-trend">+1</div>
      </div>
      
      <div class="stat-card glass" data-stat="regular">
        <div class="stat-icon">ðŸ‘¤</div>
        <div class="stat-content">
          <div class="stat-number"><%= User.where(role: 0).count %></div>
          <div class="stat-label">Regular Users</div>
        </div>
        <div class="stat-trend">+8%</div>
      </div>
      
      <div class="stat-card glass" data-stat="events">
        <div class="stat-icon">ðŸ“…</div>
        <div class="stat-content">
          <div class="stat-number"><%= @total_events %></div>
          <div class="stat-label">Events</div>
        </div>
        <div class="stat-trend">+<%= @total_registrations %> reg</div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="actions-section">
      <h2 class="section-title">Quick Actions</h2>
      <div class="actions-grid">
        <div class="action-card glass">
          <div class="action-icon">ðŸ“Š</div>
          <h3>Event Management</h3>
          <p>Manage all events and registrations</p>
          <%= link_to "Manage Events", admin_events_path, class: "btn btn-primary" %>
        </div>
        
        <div class="action-card glass">
          <div class="action-icon">ðŸ‘¥</div>
          <h3>Registration Management</h3>
          <p>Manage event registrations and attendees</p>
          <%= link_to "Manage Registrations", admin_registrations_path, class: "btn btn-primary" %>
        </div>
        
        <div class="action-card glass">
          <div class="action-icon">ðŸ“ˆ</div>
          <h3>Analytics</h3>
          <p>View detailed statistics and reports</p>
          <button class="btn btn-primary" disabled>Coming Soon</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .admin-dashboard {
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f5f5 0%, #e9ecef 50%, #f0f0f0 100%);
  }
  
  .admin-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 40px;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .nav-brand {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .brand-icon {
    font-size: 24px;
    filter: drop-shadow(0 0 10px rgba(255, 193, 7, 0.5));
  }
  
  .brand-text {
    font-size: 20px;
    font-weight: 600;
    background: linear-gradient(135deg, #fff 0%, #ccc 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .nav-link:hover {
    color: var(--text-primary);
  }
  
  .btn-sm {
    padding: 8px 16px;
    font-size: 12px;
  }
  
  .dashboard-container {
    padding: 40px;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .welcome-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40px;
    margin-bottom: 40px;
    overflow: hidden;
    position: relative;
  }
  
  .welcome-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, transparent 70%);
    animation: pulse 4s ease-in-out infinite;
  }
  
  .welcome-content {
    flex: 1;
  }
  
  .dashboard-title {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 10px;
  }
  
  .title-gradient {
    background: linear-gradient(135deg, #fff 0%, #ffc107 50%, #fff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 3s ease-in-out infinite;
  }
  
  .welcome-text {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: 20px;
  }
  
  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid rgba(40, 167, 69, 0.3);
    border-radius: 20px;
    font-size: 14px;
    color: #d4edda;
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--success);
    border-radius: 50%;
    animation: blink 2s infinite;
  }
  
  .welcome-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .stats-ring {
    position: relative;
    width: 120px;
    height: 120px;
  }
  
  .ring-progress {
    width: 100%;
    height: 100%;
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-top: 3px solid var(--warning);
    border-radius: 50%;
    animation: spin 3s linear infinite;
  }
  
  .ring-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  
  .ring-number {
    display: block;
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
  }
  
  .ring-label {
    display: block;
    font-size: 12px;
    color: var(--text-secondary);
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 40px;
  }
  
  .stat-card {
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }
  
  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--warning), transparent);
    transition: left 0.5s ease;
  }
  
  .stat-card:hover::before {
    left: 100%;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
  }
  
  .stat-icon {
    font-size: 32px;
    filter: grayscale(0.3);
  }
  
  .stat-content {
    flex: 1;
  }
  
  .stat-number {
    font-size: 32px;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1;
  }
  
  .stat-label {
    font-size: 14px;
    color: var(--text-secondary);
    margin-top: 4px;
  }
  
  .stat-trend {
    font-size: 12px;
    color: var(--success);
    font-weight: 500;
  }
  
  .actions-section {
    margin-top: 50px;
  }
  
  .section-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 24px;
    color: var(--text-primary);
  }
  
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }
  
  .action-card {
    padding: 32px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .action-card:hover {
    transform: translateY(-5px);
  }
  
  .action-icon {
    font-size: 48px;
    margin-bottom: 16px;
    filter: grayscale(0.5);
  }
  
  .action-card h3 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-primary);
  }
  
  .action-card p {
    color: var(--text-secondary);
    margin-bottom: 24px;
    line-height: 1.5;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }
  
  @keyframes shimmer {
    0% { background-position: -200px 0; }
    100% { background-position: 200px 0; }
  }
  
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @media (max-width: 768px) {
    .admin-nav {
      padding: 15px 20px;
    }
    
    .dashboard-container {
      padding: 20px;
    }
    
    .welcome-section {
      flex-direction: column;
      text-align: center;
      gap: 30px;
    }
    
    .dashboard-title {
      font-size: 36px;
    }
    
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
